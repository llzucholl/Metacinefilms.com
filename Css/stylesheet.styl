		url('../icons/fonts/icomoon.woff?h80yde') format('woff'),
		url('../icons/fonts/icomoon.ttf?h80yde') format('truetype'),
		url('../icons/fonts/icomoon.svg?h80yde#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

