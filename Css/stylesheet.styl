.icon
	font-size 1.2em
	vertical-align middle

.vimeo:hover
	color blue
	
*::selection
	background Selection
	color #FFF

html, body
	height 100%
	margin 0
	font-family "Open sans" "Sans serif"

body 
	background #3D3D3D
	font-size 16px
a 
	text-decoration none
ul
	list-style none
//Snippets
.title
	font-size 1.7em
	text-align center
	color AzulNav
.text
	color #F1F1F1F1
	margin 0 2em 0 2em
.h3
	color AzulNav
	text-align center

.Nav
	background #1E1E1E
	// background rgba(0,0,0,0.5)
	box-shadow 0 1px 4px rgba(0, 0, 0, 0.4)
	height 3.75em
	left 0
	position fixed
	right 0
	top 0
	width 100%
	z-index 3 
	&_logo
		display inline-block
		// margin-left 7%
		margin-left 6em
		margin-right 0
		vertical-align middle
	&_logoImg
		width 200px
		height 34px 
	&_botonera
		cursor pointer 
		display inline-block
		margin-left 19%
		padding-left 0
		font-family 'Open Sans', 'Sans serif', Arial 
		font-size 1em
	&_botoneraItem
		display inline-block
	&_botoneraItemLink
		color AzulNav
		margin -.2em
		padding 1.4em .7em 1.07em .7em
		text-decoration none
		transition all 0.2s ease-in-out
		&:hover
			background rgba(0,0,0,0.3)
			color #fff

.Metareel
	height 85%
	width 100%
	&_video
		height 100%
		margin-top 3.7em
		width 100%
.Socialbar
	background #1E1E1E
	// box-shadow 0 1px 4px rgba(0, 0, 0, 0.4)
	width 100%
	margin-top 4.5%
	height 4em
	z-index 100
	&_contenedor
		margin-left 37.2%
		display inline-block
	&_contenedorIcon
		display inline-block
		vertical-align middle
	&_icon
		font-size 1.5em
		line-height 1.7em
		color #fff	
	&_iconVimeo
		transition all .3s ease-in-out
		&:hover
			color vimeo
	&_iconYoutube
		transition all .3s ease-in-out
		&:hover
			color youtube
	&_iconFb
		transition all .3s ease-in-out
		&:hover
			color fb		
.Body
	&_quienes
		box-shadow 0 1px 4px rgba(0, 0, 0, 0.3)		
		padding-top 3.75em
		background rgba(0, 0, 0, 0.2)
		height 12em
	&_quienesTitle
	&_quienesText 
		text-align center
.Equipo
	box-shadow 0 1px 4px rgba(0, 0, 0, 0.3)		
	background rgba(0, 0, 0, 0.3)
	padding-top 3.75em
	&_imgList
		margin-bottom 0px
	&_imgListItem
		display inline-block
		&:nth-child(2)
			float right
			margin-right 9%
		&:nth-child(1)
			margin-left 5%
	&_img
		width 320px 
		height 320px
		border-radius 70%
		display inline-block
	&_imgContenedor
		background rgba(0, 0, 0, 0.1)	
		padding 3em 3em 3em 3em 
		margin-bottom 2.5em
		
.Servicios
	box-shadow 0 1px 4px rgba(0, 0, 0, 0.3)		
	background rgba(0, 0, 0, 0.2)	
	padding-top 3.37em
	height 100%
	
.Producciones
	box-shadow 0 1px 4px rgba(0, 0, 0, 0.3)		
	padding-top 3.37em
	background rgba(0, 0, 0, 0.3)	
	&_titulo
		// margin-bottom 1.5em
	&_galeriaListItem
		display inline-block
		margin-bottom 1em
	&_invite
		color #FFF
		padding-bottom 2em
	&_inviteYoutubeLink
		color youtube
		&:hover
			color AzulNav
	&_inviteVimeoLink
		color vimeo
		&:hover
