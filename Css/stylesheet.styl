.icon
	font-size 1.2em
	vertical-align middle
	
html, body
	height 100%
	margin 0
body 
	background #3D3D3D
	font-size 16px
a 
	text-decoration none
	
.Nav
	background #1E1E1E
	box-shadow 0 1px 4px rgba(0, 0, 0, 0.4)
	height 3.75em
	left 0
	position fixed
	right 0
	top 0
	width 100%
	z-index 3 
	&_logo
		display inline-block
		// margin-left 7%
		margin-left 6em
		margin-right 0
		vertical-align middle
	&_logoImg
		width 200px
		height 34px 
	&_botonera
		cursor pointer 
		display inline-block
		margin-left 19%
		padding-left 0
		font-family 'Open Sans', 'Sans serif', Arial 
		font-size 1em
	&_botoneraItem
		display inline-block
	&_botoneraItemLink
		color #00DBFF
		margin -.2em
		padding 1.4em .7em 1.07em .7em
		text-decoration none
		transition all 0.2s ease-in-out
		&:hover
			background rgba(0,0,0,0.3)
			color #fff

.Metareel
	height 85%
	width 100%
	&_video
		height 100%
		margin-top 3.7em
		width 100%
.Socialbar
	background #1E1E1E
	// box-shadow 0 1px 4px rgba(0, 0, 0, 0.4)
	width 100%
	margin-top 4.5%
	height 4em
	z-index 100
	&_contenedor
		margin-left 36.5%
		display inline-block
	&_contenedorIcon
		display inline-block
		vertical-align middle
	&_icon
		font-size 1.5em
		color #fff
				
		
